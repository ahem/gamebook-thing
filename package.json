{
  "name": "gamebook-thing",
  "version": "1.0.0",
  "description": "A tool for playing gamebooks (currently only Way of the Tiger)",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-dev": "webpack --mode development --module-bind js=babel-loader ./src/WayOfTheTiger.js --plugin 'html-webpack-plugin?inject=false&template=template.html'",
    "dev": "webpack-dev-server --host 0.0.0.0 --mode development -d --module-bind js=babel-loader ./src/WayOfTheTiger.js --plugin 'html-webpack-plugin?inject=false&template=template.html'",
    "build": "webpack --mode production -p --module-bind js=babel-loader WayOfTheTiger=./src/WayOfTheTiger.js --plugin 'html-webpack-plugin?filename=WayOfTheTiger.html&title=Way of the Tiger'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "styled-components": "^3.4.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/preset-flow": "^7.0.0-rc.1",
    "@babel/preset-react": "^7.0.0-rc.1",
    "@storybook/react": "^4.0.0-alpha.16",
    "babel-eslint": "^8.2.6",
    "babel-preset-stage-3": "^6.24.1",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.79.1",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.14.2",
    "prettier-eslint": "^8.8.2",
    "react-textarea-autosize": "^7.0.4",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:flowtype/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/flowtype",
      "prettier/react"
    ],
    "plugins": [
      "flowtype",
      "react",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error",
      "flowtype/define-flow-type": "warn",
      "flowtype/require-valid-file-annotation": [
        "error",
        "always"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "parser": "flow",
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4
  },
  "browserslist": [
    "defaults"
  ],
  "babel": {
    "presets": [
      "stage-3",
      "react",
      "env"
    ],
    "plugins": [
      "syntax-flow"
    ]
  }
}
